Word Cloud
from PIL import Imagefrom wordcloud import WordCloud, STOPWORDS
import matplotlib.pyplot as pltimport csv

# Load kamus positif dan negatif
lexicon_positif = {}
lexicon_negatif = {}
with open('/content/gdrive/My Drive/positif.csv', 'r') as csvfile: reader = csv.reader(csvfile, delimiter=';') 
next(reader) 
for row in reader: lexicon_positif[row[0]] = int(row[1])
with open('/content/gdrive/My Drive/negatif.csv', 'r') as csvfile: reader = csv.reader(csvfile, delimiter=';') 
next(reader) 
for row in reader: lexicon_negatif[row[0]] = int(row[1])

# Fungsi untuk mengambil kata berbobot 0 lalu mengkategorikan berdasarkan label kalimat
def categorize_unlisted_words_by_sentence_label(data_column, labels, lexicon_positif, lexicon_negatif): 
positive_words = [] 
negative_words = [] 
neutral_words = [] 
for comment, label in zip(data_column, labels): 
if isinstance(comment, str): 
for word in comment.split(): 
word_lower = word.lower() 
if word_lower not in lexicon_positif and word_lower not in lexicon_negatif: 
if label == 'positif': positive_words.append(word_lower) 
elif label == 'negatif': negative_words.append(word_lower) 
else: neutral_words.append(word_lower) return " ".join(positive_words), " ".join(negative_words), " ".join(neutral_words)

